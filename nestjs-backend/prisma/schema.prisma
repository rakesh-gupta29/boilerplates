datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    email String @unique
    hash  String

    name     String
    password String
    mode     String

    facebook  String?
    instagram String?
    twitter   String?
    linkedin  String?

    profileURL String

    @@map("users")
}

